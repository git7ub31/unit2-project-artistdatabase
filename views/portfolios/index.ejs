<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styleindex.css">
    <title>All Portfolios</title>
  </head>
  <body>
    <div id="login">
      <%- include('../partials/_navbar.ejs') %>
      <a href="/">Home</a> 
      <a href="/portfolios/new">Create a New Profile</a>
    </div>

    <h1>Database of Artists</h1>

    <ul>
      <% portfolios.forEach((portfolio) => { %>
        <li>
          <img src="../../media/defaultpic.jpg" alt="Artist 1 Image" class="portfolio-image" />

          <h3><%= portfolio.artistName %></h3>
          <p><%= portfolio.biography %></p>
          <p>by <%= portfolio.owner.username %></p>
          
          <a href="/portfolios/<%= portfolio._id %>">View more details</a>
        </li>
      <% }) %>
    </ul>
  </body>
</html>
